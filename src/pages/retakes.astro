import Layout from "../layouts/Layout.astro";
---

<Layout title="MatrÃ­cula">
  <div class="px-8 sm:px-20 py-6 sm:py-12 max-w-[1440px] mx-auto">
    <p
      class="text-[#2F326E] font-bold text-[33px] lg:text-[44px] mb-4 leading-tight text-center sm:text-left"
    >
      Recuperaciones
    </p>
    <iframe class="form-jotform" width="100%" height="800px"></iframe>
  </div>
</Layout>

<script>
  import { getForm } from "@/lib/jotForms";

  document.addEventListener("DOMContentLoaded", async () => {
    const url = await getForm("Solicitud de Recuperaciones - NADADORES UNI");
    const iframe = document.querySelector(".form-jotform") as HTMLIFrameElement;
    if (!iframe) return;
    iframe.src = url;
  });
</script>
